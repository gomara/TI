<div class="header">
    <h1><%=@data['name']%></h1>
</div>
<div class="pure-g">
        <div class="pure-u-1-4"></div>
        <div class="pure-u-1-4">
            <h2 class="content-subhead">Altura: <%=@data['height']%></h2>
            <h2 class="content-subhead">Peso: <%=@data['mass']%></h2>
            <h2 class="content-subhead">Color de pelo: <%=@data['hair_color']%></h2>
        </div>
        <div class="pure-u-1-4">
            <h2 class="content-subhead">Color de piel: <%=@data['skin_color']%></h2>
            <h2 class="content-subhead">Color de ojos: <%=@data['eye_color']%></h2>
            <h2 class="content-subhead">AÃ±o de nacimiento: <%=@data['birth_year']%></h2>
            <h2 class="content-subhead">Genero: <%=@data['gender']%></h2>
        </div>
        <div class="pure-u-1-4"></div>
</div>

<h2 class="content-subhead">Mundo</h2>
<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
    <% @data[:planets_names].each do |planet|%>
        <li class="pure-menu-item">
            <%=link_to planet[:name], {:controller => "planets", 
            :action => "index", 
            :id => planet[:id]}, class: "pure-menu-link"%>
        </li>
    <% end %>
    </ul>
</div>

<h2 class="content-subhead">Naves Espaciales</h2>
<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">    
    <% @data[:ships_names].each do |ship|%>
        <li class="pure-menu-item">
            <%=link_to ship[:name],{:controller => "spaceships", 
            :action => "index", 
            :id => ship[:id]}, class: "pure-menu-link"%>
        </li>
    <% end %>
    </ul>
</div>


<h2 class="content-subhead">Peliculas</h2>
<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
    <% @data[:films_names].each do |film|%>
    <li class="pure-menu-item">
        <%=link_to film[:name], {:controller => "films", 
        :action => "index", 
        :id => film[:id]}, class: "pure-menu-link"%>
    </li>
    <% end %>
    </ul>
</div>


