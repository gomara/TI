<div class="header">
        <h1><%=@data['name']%></h1>
</div>
<div class="pure-g">
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Modelo: <%=@data['model']%></h2>
                <h2 class="content-subhead">Marca: <%=@data['manufacturer']%></h2>
                <h2 class="content-subhead">Precio: <%=@data['cost_in_credits']%></h2>
                
        </div>
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Largo: <%=@data['length']%></h2>
                <h2 class="content-subhead">Velocidad maxima: <%=@data['max_atmosphering_speed']%></h2>
                <h2 class="content-subhead">Personal: <%=@data['crew']%></h2>
        </div>
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Pasajeros: <%=@data['passengers']%></h2>
                <h2 class="content-subhead">Capacidad de Carga: <%=@data['cargo_capacity']%></h2>
                <h2 class="content-subhead">Consumibles: <%=@data['consumables']%></h2>
        </div>
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Hyperdrive rating: <%=@data['hyperdrive_rating']%></h2>
                <h2 class="content-subhead">MGLT: <%=@data['MGLT']%></h2>
                <h2 class="content-subhead">Clase: <%=@data['starship_class']%></h2>  
        </div>
</div>



<h2 class="content-subhead">Pilotos</h2>
<div class="pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">
        <% @data[:people_names].each do |people|%>
        <li class="pure-menu-item">
        <%=link_to people[:name], {:controller => "peoples", 
        :action => "index", 
        :id => people[:id]},class: "pure-menu-link"%>
        </li>
    <% end %>
        </ul>

</div>


<h2 class="content-subhead">Peliculas</h2>
<div class="pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">
        <% @data[:films_names].each do |film|%>
            <li class="pure-menu-item">
                <%=link_to film[:name], {:controller => "films", 
                :action => "index", 
                :id => film[:id]}, class: "pure-menu-link"%>
            </li>
        <% end %>
        </ul>
</div>