<div class="header">
    <h1><%=@data['title']%></h1>
</div>

<div class="pure-g">
        <div class="pure-u-1-4"></div>
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Episodio: <%=@data['episodeID']%></h2>
                <h2 class="content-subhead">Director: <%=@data['director']%></h2>
        </div>
        <div class="pure-u-1-4">
                <h2 class="content-subhead">Productores: <%=@data['producers']%></h2>
                <h2 class="content-subhead">Fecha de lanzamiento: <%=@data['releaseDate']%></h2>
        </div>
        <div class="pure-u-1-4"></div>
</div>


<h2 class="content-subhead">Opening:</h2>
<p><%=@data['openingCrawl']%></p>

<h2 class="content-subhead">Personajes</h2>
<div class="pure-menu">
        <ul class="pure-menu-list">
        <% @characters['characters'].each do |people|%>
        <li class="pure-menu-item">
        <%=link_to people['name'],  {:controller => "peoples", 
        :action => "index", 
        :id => people['id']},class: "pure-menu-link"%>
        </li>
    <% end %>
        </ul>
</div>


<h2 class="content-subhead">Naves</h2>
<div class="pure-menu">
        <ul class="pure-menu-list">
        <% @ships['starships'].each do |ship|%>
        <li class="pure-menu-item">
        <%=link_to ship['name'],  {:controller => "spaceships", 
        :action => "index", 
        :id => ship['id']},class: "pure-menu-link"%>
        </li>
    <% end %>
        </ul>
</div>

<h2 class="content-subhead">Planetas</h2>
<div class="pure-menu">
        <ul class="pure-menu-list">
        <% @planets['planets'].each do |planet|%>
        <li class="pure-menu-item">
        <%=link_to planet['name'],  {:controller => "planets", 
        :action => "index", 
        :id => planet['id']},class: "pure-menu-link"%>
        </li>
    <% end %>
        </ul>
</div>



